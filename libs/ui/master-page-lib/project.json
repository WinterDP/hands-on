{
  "name": "master-page-lib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "master-page-lib/src",
  "prefix": "lib",
  "tags": ["ui"],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "master-page-lib/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "master-page-lib/**/*.ts",
          "master-page-lib/**/*.html"
        ]
      }
    }
  }
}
